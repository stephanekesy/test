{% extends 'MainBundle::layout.html.twig' %}

{% block title %}
Topic and MSL | Dandelion
{% endblock %}

{% block modulestylesheets %}
<link href="{{ asset('bundles/main/css/topic.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block modulejavascripts %}
<script src="{{ asset('bundles/main/js/topic_msl.js') }}" type="text/javascript"></script>
{% endblock %}

{% block content %}
	<div class="row">
		<div class="col-sm-4">
			<form name="frm_topic" id="frm_topic" method="post" action="" role="form">
				<div class="row">
					<div class="col-sm-12 header-bg-text">
						<div class="col-sm-2">
							<span><i class="fa fa-list fa-2x icon-white-color"></i></span>
						</div>
						<div class="col-sm-10 padding-left-25px">
							<div class="first-text-header">Topic</div>
							<div class="second-text-header">add and update</div>
						</div>
					</div>
					<div class="row-gap"></div>
					<div class="row">
						<div class="col-xs-9 padding-right-0px">
							<input type="type" name="txt_topic" id="txt_topic" value="" class="form-control input-lg" placeholder="New Here" maxlength="32">
						</div>
						<div class="col-xs-3">
							<div class="button-group text-right" title="ADD" id="topic_add">
								<button type="button" name="btn_topic" id="btn_topic" class="btn btn-primary btn-lg common-button width-100-per">+</button>
							</div>
						</div>
					</div>
					<div class="row-gap"></div>
					<table class="table table-striped">
						<tbody id="table_topic_list" class=""></tbody>
					</table>
				</div>
			</form>	
		</div>
		<div class="col-sm-1"></div>
		<div class="col-sm-7">
			<form name="frm_msl" id="frm_msl" method="post" action="" role="form">
				<div class="row">
					<div class="col-sm-12 header-bg-text">
						<div class="col-sm-1">
							<span><i class="fa fa-user fa-2x icon-white-color"></i></span>
						</div>
						<div class="col-sm-11 padding-left-25px">
							<div class="first-text-header">MSL</div>
							<div class="second-text-header">add, update and delete</div>
						</div>
					</div>
					<div class="row-gap"></div>
					<div class="row">
						<div class="col-xs-3 padding-right-0px">
							<input type="text" name="txt_first_name" id="txt_first_name" value="" class="form-control input-lg" placeholder="First Name">
						</div>
						<div class="col-xs-3 padding-right-0px">
							<input type="text" name="txt_last_name" id="txt_last_name" value="" class="form-control input-lg" placeholder="Last Name">
						</div>
						<div class="col-xs-4 padding-right-0px">
							<input type="text" name="txt_email" id="txt_email" value="" class="form-control input-lg" placeholder="Email">
						</div>
						<div class="col-xs-2">
							<div class="button-group text-right" title="ADD" id="msl_add">
								<button type="button" name="btn_msl" id="btn_msl" class="btn btn-primary btn-lg common-button width-100-per">+</button>
							</div>
						</div>
					</div>
					<div class="row-gap"></div>
					<table class="table table-striped">
						<tr class="table-tr-even">
							<td>
								First Name 1
							</td>
							<td>
								Email 1
							</td>
							<td>
								topic 1, topic 1, 
							</td>
							<td class="text-center" title="Edit">
								<span class="pull-right"><i class="fa fa-pencil cursor-pointer"></i></span>
							</td>
						</tr>
						<tr class="table-tr-odd">
							<td>
								First Name 1
							</td>
							<td>
								Email 1
